---
import { APP_DESCRIPTION, APP_NAME } from "@/constants";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
const _title = title ? `${title} ï½¥ ${APP_NAME}` : APP_NAME;
const _description = description ?? APP_DESCRIPTION;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={_description} />
    <link rel="icon" href="/about/favicon.ico" />
    <title>{_title}</title>
    <meta name="og:type" content="website" />
    <meta name="og:site_name" content={APP_NAME} />
    <meta name="og:url" content={Astro.url} />
    <meta name="og:title" content={_title} />
    <meta name="og:description" content={_description} />
  </head>
  <body>
    <slot />
    <script is:inline>
      document.addEventListener("touchstart", () => {}, { passive: true });
    </script>
  </body>
</html>
