---
import imageFirstViewScreenshotSm from "../assets/first-view-screenshot-sm.webp";
import imageFirstViewScreenshot from "../assets/first-view-screenshot.webp";
---

<div class="container">
  <article class="container-inner">
    <section>
      <h1 class="title">PlusArchive</h1>
      <p class="description">世界中の音楽に耳を澄まし、それを記録していく</p>
      <a
        href="https://plusarchive.com"
        class="link"
        target="_blank"
        rel="noreferrer">Go to PlusArchive</a
      >
    </section>
    <div class="screenshots">
      <img
        src={imageFirstViewScreenshotSm}
        width="379"
        height="674"
        class="screenshot-sm"
        alt="screenshot for mobile phone"
      />
      <img
        src={imageFirstViewScreenshot}
        width="1373"
        height="1069"
        class="screenshot"
        alt="screenshot for pc"
      />
    </div>
  </article>
</div>

<style>
  .container {
    background: linear-gradient(
      to bottom,
      rgb(var(--gray-800)),
      rgb(var(--gray-900))
    );
  }

  .container-inner {
    display: grid;
    height: 95dvh;
    margin: 0 auto;
    max-width: 1536px;
    padding: 0 0.5rem;
    place-content: center;
    place-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .container-inner {
      gap: 1rem;
      padding: 0 1rem;
    }
  }

  @media (min-width: 1024px) {
    .container-inner {
      gap: 4rem;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      padding: 0 6rem;
    }
  }

  .title {
    color: rgb(var(--gray-100));
    font-size: 2.75rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .description {
    margin-bottom: 2rem;
    padding: 0 0.5rem;
  }

  @media (min-width: 768px) {
    .description {
      padding: 0 6rem;
    }
  }

  @media (min-width: 1024px) {
    .description {
      padding: 0;
    }
  }

  .link {
    background: rgb(var(--rose-500) / 90%);
    border-radius: 0.5rem;
    box-shadow: 0 14px 32px -12px rgb(var(--rose-500) / 50%);
    color: rgb(var(--gray-100));
    display: inline-block;
    font-weight: bold;
    margin-bottom: 3rem;
    padding: 0.5rem 1rem;
  }

  @media (min-width: 768px) {
    .link {
      margin-bottom: 3rem;
    }
  }

  .screenshots {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .screenshot,
  .screenshot-sm {
    background: rgb(var(--gray-700));
    border: 1px solid rgb(var(--gray-400) / 20%);
    border-radius: 0.25rem;
    height: auto;
    max-width: 80%;
  }

  @media (min-width: 768px) {
    .screenshot {
      max-width: 70%;
    }
  }

  @media (min-width: 1024px) {
    .screenshot {
      max-width: 100%;
    }
  }

  .screenshot-sm {
    bottom: -4%;
    left: 6%;
    max-width: 20%;
    position: absolute;
  }

  @media (min-width: 768px) {
    .screenshot-sm {
      bottom: -3%;
      left: 12%;
      max-width: 18%;
    }
  }

  @media (min-width: 1024px) {
    .screenshot-sm {
      bottom: -3%;
      left: -3%;
      max-width: 26%;
    }
  }
</style>
