---
import { Image } from "astro:assets";
import imageFirstViewScreenshotSm from "../assets/first-view-screenshot-sm.webp";
import imageFirstViewScreenshot from "../assets/first-view-screenshot.webp";
---

<div class="container">
  <article class="container-inner">
    <section class="main">
      <h1 class="main-title">denene</h1>
      <p class="main-description">
        「控えめな Web」を探究し、標準と新しいさを見つける
      </p>
      <a
        href="https://jamband.github.io/denene/"
        class="main-link"
        target="_blank"
        rel="noreferrer">go to denene</a
      >
    </section>
    <div class="screenshot-container">
      <Image
        src={imageFirstViewScreenshotSm}
        width="379"
        height="674"
        class="screenshot-sm"
        alt="screenshot for mobile phone"
      />
      <Image
        src={imageFirstViewScreenshot}
        width="1373"
        height="1069"
        class="screenshot"
        alt="screenshot for pc"
      />
    </div>
  </article>
</div>

<style>
  .container {
    background: linear-gradient(
      to bottom,
      rgb(var(--gray-800)),
      rgb(var(--gray-900))
    );
  }

  .container-inner {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    height: 95dvh;
    justify-content: center;
    padding: 3rem 1rem;
  }

  @media (width >= 1024px) {
    .container-inner {
      flex-direction: row;
      margin: 0 auto;
      max-width: 1536px;
    }
  }

  .main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  @media (width >= 1024px) {
    .main {
      flex: 1;
    }
  }

  .main-title {
    color: rgb(var(--gray-100));
    font-size: 2.75rem;
    font-weight: bold;
    line-height: 1.2;
  }

  .main-description {
    line-height: 1.85;
  }

  .main-link {
    align-self: center;
    background: rgb(var(--gray-400) / 10%);
    border: 2px solid rgb(var(--gray-400) / 80%);
    border-radius: 0.125rem;
    box-shadow: 0 14px 32px -12px rgb(var(--gray-400) / 20%);
    color: rgb(var(--gray-100));
    display: inline-block;
    font-weight: bold;
    padding: 0.75rem 1.25rem;
  }

  .link:active {
    background: rgb(var(--gray-400) / 15%);
  }

  @media (hover: hover) and (pointer: fine) {
    .link:hover {
      background: rgb(var(--gray-400) / 15%);
    }
  }

  .screenshot-container {
    display: flex;
    justify-content: center;
    margin: 0 3rem;
    position: relative;
  }

  @media (width >= 768px) {
    .screenshot-container {
      margin: 0 12rem;
    }
  }

  @media (width >= 1024px) {
    .screenshot-container {
      flex: 1;
      margin: 0 5rem;
    }
  }

  .screenshot-sm,
  .screenshot {
    background: rgb(var(--gray-800));
    border: 1px solid rgb(var(--gray-400) / 20%);
    border-radius: 0.25rem;
  }

  .screenshot-sm {
    bottom: -5%;
    left: -5%;
    position: absolute;
    width: 25%;
  }
</style>
